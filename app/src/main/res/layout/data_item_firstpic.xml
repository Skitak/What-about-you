<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#AA00BB"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/firstPicLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Voici votre premiÃ¨re photo sur facebook"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/firstPicImgView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarFirstPic"
            android:visibility="gone"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/refreshBtnFirstPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_search_category_default"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>